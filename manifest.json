{
  "manifest_version": 3,
  "name": "南大ehall自动刷课",
  "version": "1.0",
  "description": "",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lms.nju.edu.cn/course*"
      ],
      "js": [
        "content.js",
        "lib.js",
        "ui.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_title": "南大ehall自动刷课"
  }
}
